<body>
    <div class="main-container">
        <div class="tasks-section">
            <div class="container">
                <h1>üå∏ –¢—Ä–µ–∫–µ—Ä –ø—Ä–∏–≤—ã—á–µ–∫</h1>
                
                <div class="add-form">
                    <input type="text" class="task-input" id="taskInput" placeholder="–ù–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–∏–≤—ã—á–∫–∏">
                    
                    <input type="color" class="color-picker" id="colorPicker" value="#4a6fa5">
                    
                    <div class="icon-select">
                        <div class="selected-icon" id="selectedIcon">
                            <i class="fas fa-plus"></i>
                        </div>
                        <div class="icon-dropdown" id="iconDropdown"></div>
                    </div>
                    
                    <button class="add-btn" id="addBtn">–î–æ–±–∞–≤–∏—Ç—å</button>
                </div>
                
                <div class="tasks-grid" id="tasksGrid">
                    <div class="empty-state">–î–æ–±–∞–≤—å—Ç–µ —Å–≤–æ—é –ø–µ—Ä–≤—É—é –ø—Ä–∏–≤—ã—á–∫—É</div>
                </div>
            </div>
        </div>

        <div class="stats-section">
            <h2><i class="fas fa-chart-pie"></i> –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞</h2>
            
            <div class="stats-tabs">
                <div class="stats-tab active" data-period="week">–ù–µ–¥–µ–ª—è</div>
                <div class="stats-tab" data-period="month">–ú–µ—Å—è—Ü</div>
            </div>
            
            <div class="chart-container">
                <canvas id="statsChart"></canvas>
            </div>
            
            <div class="stats-summary" id="statsSummary">
                <!-- –°—é–¥–∞ –±—É–¥–µ—Ç –≤—Å—Ç–∞–≤–ª—è—Ç—å—Å—è —Ç–µ–∫—Å—Ç–æ–≤–∞—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ -->
            </div>
        </div>
    </div>

    <script>
        // –î–æ—Å—Ç—É–ø–Ω—ã–µ –∏–∫–æ–Ω–∫–∏ (Font Awesome)
        const icons = [
            'book', 'dumbbell', 'paint-brush', 'music',
            'apple-alt', 'running', 'moon', 'sun',
            'utensils', 'laptop', 'tv', 'gamepad',
            'tree', 'shopping-basket', 'bed', 'bicycle'
        ];

        // DOM —ç–ª–µ–º–µ–Ω—Ç—ã
        const taskInput = document.getElementById('taskInput');
        const colorPicker = document.getElementById('colorPicker');
        const selectedIcon = document.getElementById('selectedIcon');
        const iconDropdown = document.getElementById('iconDropdown');
        const addBtn = document.getElementById('addBtn');
        const tasksGrid = document.getElementById('tasksGrid');
        const statsTabs = document.querySelectorAll('.stats-tab');
        const statsChartCtx = document.getElementById('statsChart').getContext('2d');
        const statsSummary = document.getElementById('statsSummary');

        // –°–æ—Å—Ç–æ—è–Ω–∏–µ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
        let tasks = JSON.parse(localStorage.getItem('tasks')) || [];
        let currentIcon = 'fas fa-plus';
        let activeTask = null;
        let startTime = null;
        let timerInterval = null;
        let todayTotal = {};
        let statsChart = null;
        let currentPeriod = 'week';

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        function init() {
            renderIcons();
            renderTasks();
            loadTodayTotals();
            setupEventListeners();
            updateStats();
        }

        // –†–µ–Ω–¥–µ—Ä –∏–∫–æ–Ω–æ–∫ –≤ dropdown
        function renderIcons() {
            iconDropdown.innerHTML = '';
            
            icons.forEach(icon => {
                const iconEl = document.createElement('div');
                iconEl.className = 'icon-option';
                iconEl.innerHTML = `<i class="fas fa-${icon}"></i>`;
                
                iconEl.addEventListener('click', () => {
                    currentIcon = `fas fa-${icon}`;
                    selectedIcon.innerHTML = `<i class="${currentIcon}"></i>`;
                    iconDropdown.classList.remove('show');
                });
                
                iconDropdown.appendChild(iconEl);
            });
        }

        // –†–µ–Ω–¥–µ—Ä –∑–∞–¥–∞—á
        function renderTasks() {
            tasksGrid.innerHTML = '';
            
            if (tasks.length === 0) {
                tasksGrid.innerHTML = '<div class="empty-state">–î–æ–±–∞–≤—å—Ç–µ —Å–≤–æ—é –ø–µ—Ä–≤—É—é –ø—Ä–∏–≤—ã—á–∫—É</div>';
                return;
            }
            
            tasks.forEach((task, index) => {
                const taskEl = document.createElement('div');
                taskEl.className = 'task-card';
                taskEl.style.borderLeftColor = task.color;
                
                if (activeTask === index) {
                    taskEl.classList.add('active');
                }
                
                taskEl.innerHTML = `
                    <button class="delete-btn" data-index="${index}">√ó</button>
                    <div class="task-icon"><i class="${task.icon}"></i></div>
                    <div class="task-name">${task.name}</div>
                    <div class="task-time">${activeTask === index ? formatTime(Date.now() - startTime) : '00:00:00'}</div>
                    <div class="task-today">–°–µ–≥–æ–¥–Ω—è: ${formatTime(todayTotal[index] || 0)}</div>
                `;
                
                taskEl.addEventListener('click', () => toggleTask(index));
                tasksGrid.appendChild(taskEl);
            });
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –∫–Ω–æ–ø–æ–∫ —É–¥–∞–ª–µ–Ω–∏—è
            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    deleteTask(parseInt(btn.dataset.index));
                });
            });
        }

        // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –∑–∞–¥–∞—á–∏
        function addTask() {
            const name = taskInput.value.trim();
            const color = colorPicker.value;
            
            if (name && currentIcon !== 'fas fa-plus') {
                tasks.push({
                    name,
                    color,
                    icon: currentIcon
                });
                
                saveTasks();
                taskInput.value = '';
                currentIcon = 'fas fa-plus';
                selectedIcon.innerHTML = '<i class="fas fa-plus"></i>';
                renderTasks();
                updateStats();
            }
        }

        // –£–¥–∞–ª–µ–Ω–∏–µ –∑–∞–¥–∞—á–∏
        function deleteTask(index) {
            tasks.splice(index, 1);
            saveTasks();
            if (activeTask === index) {
                stopTimer();
            } else if (activeTask > index) {
                activeTask--;
            }
            renderTasks();
            updateStats();
        }

        // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –∑–∞–¥–∞—á–∏ (—Å—Ç–∞—Ä—Ç/—Å—Ç–æ–ø)
        function toggleTask(index) {
            if (activeTask === index) {
                stopTimer();
            } else {
                if (activeTask !== null) {
                    stopTimer();
                }
                startTimer(index);
            }
        }

        // –ó–∞–ø—É—Å–∫ —Ç–∞–π–º–µ—Ä–∞
        function startTimer(index) {
            activeTask = index;
            startTime = Date.now();
            
            timerInterval = setInterval(() => {
                updateActiveTask();
            }, 1000);
            
            updateActiveTask();
            renderTasks();
        }

        // –û—Å—Ç–∞–Ω–æ–≤–∫–∞ —Ç–∞–π–º–µ—Ä–∞
        function stopTimer() {
            if (activeTask === null) return;
            
            const endTime = Date.now();
            const duration = endTime - startTime;
            
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤—Ä–µ–º—è –¥–ª—è —Ç–µ–∫—É—â–µ–≥–æ –¥–Ω—è
            const today = new Date().toLocaleDateString();
            todayTotal[activeTask] = (todayTotal[activeTask] || 0) + duration;
            saveTodayTotals();
            
            clearInterval(timerInterval);
            activeTask = null;
            startTime = null;
            
            renderTasks();
            updateStats();
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∞–∫—Ç–∏–≤–Ω–æ–π –∑–∞–¥–∞—á–∏
        function updateActiveTask() {
            if (activeTask === null) return;
            
            const currentTime = Date.now() - startTime;
            const totalTime = (todayTotal[activeTask] || 0) + currentTime;
            
            const taskEls = document.querySelectorAll('.task-card');
            if (taskEls[activeTask]) {
                const timeEl = taskEls[activeTask].querySelector('.task-time');
                const todayEl = taskEls[activeTask].querySelector('.task-today');
                
                if (timeEl) timeEl.textContent = formatTime(currentTime);
                if (todayEl) todayEl.textContent = `–°–µ–≥–æ–¥–Ω—è: ${formatTime(totalTime)}`;
            }
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏
        function updateStats() {
            // –î–ª—è –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–∏ –∏—Å–ø–æ–ª—å–∑—É–µ–º —Ç–µ–∫—É—â–∏–µ –¥–∞–Ω–Ω—ã–µ
            // –í —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–∏ –Ω—É–∂–Ω–æ –∞–Ω–∞–ª–∏–∑–∏—Ä–æ–≤–∞—Ç—å –¥–∞–Ω–Ω—ã–µ –∑–∞ –Ω–µ–¥–µ–ª—é/–º–µ—Å—è—Ü
            
            const statsData = {
                labels: tasks.map(task => task.name),
                data: tasks.map((task, index) => {
                    // –í —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–∏ –Ω—É–∂–Ω–æ —É—á–∏—Ç—ã–≤–∞—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—ã–π –ø–µ—Ä–∏–æ–¥
                    return todayTotal[index] ? Math.floor(todayTotal[index] / (1000 * 60)) : 0;
                }),
                colors: tasks.map(task => task.color)
            };
            
            renderChart(statsData);
            renderStatsSummary(statsData);
        }

        // –†–µ–Ω–¥–µ—Ä –∫—Ä—É–≥–æ–≤–æ–π –¥–∏–∞–≥—Ä–∞–º–º—ã
        function renderChart(data) {
            if (statsChart) {
                statsChart.destroy();
            }
            
            statsChart = new Chart(statsChartCtx, {
                type: 'doughnut',
                data: {
                    labels: data.labels,
                    datasets: [{
                        data: data.data,
                        backgroundColor: data.colors,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.raw || 0;
                                    return `${label}: ${value} –º–∏–Ω`;
                                }
                            }
                        }
                    }
                }
            });
        }

        // –†–µ–Ω–¥–µ—Ä —Ç–µ–∫—Å—Ç–æ–≤–æ–π —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏
        function renderStatsSummary(data) {
            let html = '<h3>–û–±—â–µ–µ –≤—Ä–µ–º—è: ';
            
            const totalMinutes = data.data.reduce((sum, val) => sum + val, 0);
            const hours = Math.floor(totalMinutes / 60);
            const minutes = totalMinutes % 60;
            
            html += `${hours} —á ${minutes} –º–∏–Ω</h3>`;
            
            data.labels.forEach((label, index) => {
                const minutes = data.data[index];
                if (minutes > 0) {
                    const hours = Math.floor(minutes / 60);
                    const mins = minutes % 60;
                    const timeStr = hours > 0 ? `${hours} —á ${mins} –º–∏–Ω` : `${mins} –º–∏–Ω`;
                    
                    html += `
                        <div class="stats-item">
                            <div class="stats-color" style="background: ${data.colors[index]}"></div>
                            <div>${label}: ${timeStr}</div>
                        </div>
                    `;
                }
            });
            
            statsSummary.innerHTML = html;
        }

        // –§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏
        function formatTime(ms) {
            const totalSeconds = Math.floor(ms / 1000);
            const hours = Math.floor(totalSeconds / 3600);
            const minutes = Math.floor((totalSeconds % 3600) / 60);
            const seconds = totalSeconds % 60;
            
            return [
                hours.toString().padStart(2, '0'),
                minutes.toString().padStart(2, '0'),
                seconds.toString().padStart(2, '0')
            ].join(':');
        }

        // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –∑–∞–¥–∞—á
        function saveTasks() {
            localStorage.setItem('tasks', JSON.stringify(tasks));
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–µ–≥–æ–¥–Ω—è—à–Ω–∏—Ö —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤
        function loadTodayTotals() {
            const today = new Date().toLocaleDateString();
            const savedData = localStorage.getItem(`todayTotals_${today}`);
            todayTotal = savedData ? JSON.parse(savedData) : {};
        }

        // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Å–µ–≥–æ–¥–Ω—è—à–Ω–∏—Ö —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤
        function saveTodayTotals() {
            const today = new Date().toLocaleDateString();
            localStorage.setItem(`todayTotals_${today}`, JSON.stringify(todayTotal));
        }

        // –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–æ–≤ —Å–æ–±—ã—Ç–∏–π
        function setupEventListeners() {
            addBtn.addEventListener('click', addTask);
            taskInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') addTask();
            });
            
            selectedIcon.addEventListener('click', () => {
                iconDropdown.classList.toggle('show');
            });
            
            document.addEventListener('click', (e) => {
                if (!e.target.closest('.icon-select')) {
                    iconDropdown.classList.remove('show');
                }
            });
            
            statsTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    statsTabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    currentPeriod = tab.dataset.period;
                    updateStats();
                });
            });
        }

        // –ó–∞–ø—É—Å–∫ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
        init();
    </script>
</body>
</html>
