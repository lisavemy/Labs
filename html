        }

        .stats-tab {
            padding: 8px 15px;
            cursor: pointer;
            border-bottom: 2px solid transparent;
        }

        .stats-tab.active {
            border-bottom: 2px solid var(--primary-dark);
            color: var(--primary-dark);
            font-weight: bold;
        }

        .stats-summary {
