            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .task-card:hover .delete-btn {
            opacity: 1;
        }

        .empty-state {
